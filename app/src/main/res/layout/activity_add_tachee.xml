<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTacheeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#fff">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:src="@drawable/logo"
                />
        </RelativeLayout>

        <GridLayout
            android:columnCount="1"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Affectation du tache"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textColor="@color/colorBlue" />


            <EditText
                android:id="@+id/group"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="text"
                android:hint="Groupe"
                android:textColorHint="@color/colorBlue"
                android:drawableLeft="@drawable/ic_people_black_24dp"
                android:drawablePadding="10dp"
                android:background="@drawable/edit"
                android:padding="20dp"
                android:layout_margin="10dp"

                />


            <EditText
                android:id="@+id/date"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="text"
                android:hint="ouvrier "
                android:textColorHint="@color/colorBlue"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:background="@drawable/edit"
                android:padding="20dp"

                />

            <EditText
                android:id="@+id/local"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="text"
                android:hint="Local"
                android:textColorHint="@color/colorBlue"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:drawablePadding="10dp"
                android:background="@drawable/edit"
                android:padding="20dp"
                android:layout_marginTop="10dp"

                />
            <EditText
                android:id="@+id/type"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="text"
                android:hint="Entre La Tache"
                android:textColorHint="@color/colorBlue"
                android:drawableLeft="@drawable/ic_queue_black_24dp"
                android:drawablePadding="10dp"
                android:background="@drawable/edit"
                android:padding="20dp"
                android:layout_marginTop="10dp"

                />

            <CalendarView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="AFFECTE LA TACHE"
                android:textColor="#fff"
                android:textSize="20dp"
                android:background="@drawable/button"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                />



        </GridLayout>



    </LinearLayout>

</ScrollView>